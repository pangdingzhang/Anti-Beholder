    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu" />

</RelativeLayout>